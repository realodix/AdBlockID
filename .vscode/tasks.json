    "version": "2.0.0",
    "tasks": [
        {
            "label": "Fix",
            "type": "shell",
            "command": "./vendor/bin/haiku fix",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "./vendor/bin/haiku build",
            "problemMatcher": []
        },
        {
            "label": "Fix & Build",
            "dependsOn": ["Fix", "Build"],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Release AdBlockID",
            "type": "shell",
            "command": "git add --all && git commit -m 'Release AdBlockID' && git push",
            "problemMatcher": []
        },
    ]
}
