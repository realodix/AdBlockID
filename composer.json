{
    "require": {
        "realodix/hippo": "dev-main"
    },
    "repositories": [{"type": "vcs", "url": "https://github.com/realodix/hippo"}],
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "fix": "./vendor/bin/hippo fix",
        "build": [
            "./vendor/bin/hippo build"
        ],
        "soft-build": [
            "@fix",
            "./vendor/bin/hippo build --skip-version"
        ]
    }
}
